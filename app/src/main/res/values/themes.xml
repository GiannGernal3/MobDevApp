<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.FamilyFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="MyCalendarViewStyle" parent="android:Widget.CalendarView">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/black</item> <!-- Set to black explicitly -->
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
        <item name="android:headerYearTextAppearance">@style/CalendarHeaderTextAppearance</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarHeaderTextAppearance</item>
    </style>

    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDateTextAppearance">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarHeaderTextAppearance">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">18sp</item>
    </style>

    <color name="black">#0A0A0A</color>
</resources>
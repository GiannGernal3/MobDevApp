<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FamilyFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="MyCalendarViewStyle" parent="android:Widget.CalendarView">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/black</item> <!-- Explicitly set to black -->
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
        <item name="android:headerYearTextAppearance">@style/CalendarHeaderTextAppearance</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarHeaderTextAppearance</item>
    </style>

    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDateTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarHeaderTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>